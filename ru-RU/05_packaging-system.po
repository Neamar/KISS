#, no-c-format
msgid "Format"
msgstr "Формат"

#. Tag: indexterm
#, no-c-format
msgid "<primary>DSC file</primary>"
msgstr "<primary>DSC, файл</primary>"

#. Tag: indexterm
#, no-c-format
msgid "<primary><filename>diff.gz</filename> file</primary>"
msgstr "<primary><filename>diff.gz</filename>, файл</primary>"

