"        };\n"
"};\n"
"\n"
"zone \"internal.falcot.com\" {\n"
"        type master;\n"
"        file \"/etc/bind/db.internal.falcot.com\";\n"
"        allow-query { 192.168.0.0/16; };\n"
"};\n"
"\n"
"zone \"168.192.in-addr.arpa\" {\n"
"        type master;\n"
"        file \"/etc/bind/db.192.168\";\n"
"        allow-query { 192.168.0.0/16; };\n"
"};\n"

